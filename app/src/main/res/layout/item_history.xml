<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="11">

            <TextView
                android:id="@+id/item_history_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="type"
                android:textStyle="bold"
                android:textSize="17sp"></TextView>

            <TextView
                android:id="@+id/item_history_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Name"
                android:textSize="17sp"></TextView>

            <TextView
                android:id="@+id/item_history_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Date"
                android:textSize="17sp"></TextView>


            <TextView
                android:id="@+id/item_history_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="amount"
                android:textSize="17sp"></TextView>

            <TextView
                android:id="@+id/item_history_units"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:text="units"
                android:textSize="14sp"></TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/item_history_reason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingTop="3dp"
            android:text="reason"
            android:textSize="15sp"
            android:maxLines="2"></TextView>

    </LinearLayout>


</LinearLayout>

